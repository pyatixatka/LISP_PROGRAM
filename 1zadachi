;;; Задание №2
;;; Зинченко В.Д.
;;; Найти последний элемент списка

(deFun посл(lst)
  (cond ((null (cdr lst)) (car lst))
  (t (посл (cdr lst)))))

;;;
;;; (посл '(1 2 3))
;;; 3
;;; (посл '(1 2 3 4 5 6 7))
;;; 7

